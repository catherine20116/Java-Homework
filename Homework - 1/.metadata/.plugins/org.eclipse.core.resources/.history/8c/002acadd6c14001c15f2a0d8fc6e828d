	public static ArrayList<Integer> findIndex (int arr[], int num) {
        int len = arr.length;
        ArrayList <Integer> arrayZero = new ArrayList <Integer>();
		for (int i = 0; i < arr.length; i++) {
			if(arr[i] == 0) {
				arrayZero.add(arr[i]);
			}
			return arrayZero;
		}
	}

